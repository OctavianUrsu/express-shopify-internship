<%- include('./includes/head.ejs') %>
</head>

<body>
   <%- include('./includes/navigation.ejs') %>
   <main>
     <form action="/<% if (editing) { %>edit-item<% } else { %>add-item<% } %>" method="POST">
      <div class="container col-sm-8 card p-4 mt-3">
      <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" name="name" id="name" value="<% if (editing) { %><%= item.name %><% } %>">
        </div>
      </div>

      <div class="row mb-3">
        <label for="imageUrl" class="col-sm-2 col-form-label">Image URL</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= item.imageUrl %><% } %>">
        </div>
      </div>

      <div class="row mb-3">
        <label for="description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" name="description" id="description" value="<% if (editing) { %><%= item.description %><% } %>">
        </div>
      </div>

      <fieldset class="row mb-3">
        <legend class="col-form-label col-sm-2 pt-0">Category</legend>
        <div class="col-sm-10">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="category" id="Fruits" value="Fruits" <% if (editing && item.category === "Fruits") { %> checked <% } %>>
            <label class="form-check-label" for="gridRadios1">
              Fruits
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="category" id="Vegetables" value="Vegetables" <% if (editing && item.category === "Vegetables") { %> checked <% } %>>
            <label class="form-check-label" for="gridRadios1">
              Vegetables
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="category" id="Beverages" value="Beverages" <% if (editing && item.category === "Beverages") { %> checked <% } %>>
            <label class="form-check-label" for="gridRadios1">
              Beverages
            </label>
          </div>
        </div>
      </fieldset>

      <div class="row mb-3">
        <label for="costPerItem" class="col-sm-2 col-form-label">Cost per item</label>
        <div class="col-sm-10">
        <input type="number" step="0.01" class="form-control" name="costPerItem" id="costPerItem" value="<% if (editing) { %><%= item.costPerItem %><% } %>">
        </div>
      </div>

      <div class="row mb-3">
        <label for="quantity" class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
        <input type="number" step="1" class="form-control" name="quantity" id="quantity" value="<% if (editing) { %><%= item.quantity %><% } %>">
        </div>
      </div>

      <% if (editing) { %>
        <input type="hidden" value="<%= item._id %>" name="itemId">
      <% } %>

      <div class="row mb-3">
        <label for="description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
        <button type="submit" class="btn btn-primary col-sm-12"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </div>
      </div>
     
    </div>
    </form>
   </main>
   
<%- include('./includes/end.ejs') %>